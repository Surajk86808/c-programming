#include <stdio.h>

int main() {
    float income, tax = 0;
    float tax_one, tax_two, tax_total;
    float exceeding, exceeding_one;

    scanf("%f", &income);

    if (income <= 250000) {
        tax = 0;  // kn
    } 
    else if (income > 250000 && income <= 500000) {
        exceeding = income - 250000;
        tax = exceeding * 5 / 100;  // 5% tax sirf
    } 
    else if (income > 500000 && income <= 1000000) {
        exceeding = 500000 - 250000;
        tax = exceeding * 5 / 100;   
        exceeding_one = income - 500000;
        tax_one = exceeding_one * 20 / 100;   
        tax_total = tax + tax_one;
        tax = tax_total;
    } 
    else if (income > 1000000) {
        exceeding = 500000 - 250000;
        tax = exceeding * 5 / 100;   
        exceeding_one = 1000000 - 500000;
        tax_one = exceeding_one * 20 / 100;   
        exceeding = income - 1000000;
        tax_two = exceeding * 30 / 100;   
        tax_total = tax + tax_one + tax_two;
        tax = tax_total;
    }

    printf("%.2f\n", tax);    
    return 0;
}
